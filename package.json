{
  "name": "talkiejs",
  "version": "0.8.3",
  "description": "Simple slide presentation library. Responsive scaling & markdown ready.",
  "main": "dist/talkie.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run build && serve .",
    "lint": "eslint ./src",
    "test": "npm run lint && karma start --singleRun",
    "test:watch": "karma start",
    "css": "npm run style && npm run theme",
    "css:watch": "npm run style:watch & npm run theme:watch",
    "style": "cssnext --verbose --compress ./src/style/index.css ./dist/talkie.min.css",
    "style:watch": "npm run style -- --watch --sourcemap",
    "theme": "cssnext --verbose --compress ./src/theme/default/index.css ./dist/talkie-default.min.css",
    "theme:watch": "npm run theme -- --watch --sourcemap",
    "bundle": "browserify src/index.js -o dist/talkie.min.js -p licensify -t babelify -s=Talkie",
    "bundle:watch": "watchify src/index.js -o dist/talkie.min.js --debug --verbose -p licensify -t babelify -s=Talkie",
    "minify:js": "uglifyjs ./dist/talkie.min.js -m -c --comments '/Modules in this bundle/' -o ./dist/talkie.min.js",
    "build": "npm run bundle && npm run css && npm run minify:js",
    "watch": "npm run bundle:watch & npm run css:watch",
    "patch": "npm version patch -m \"bump v%s !\"",
    "minor": "npm version minor -m \"bump v%s !!\"",
    "major": "npm version major -m \"bump v%s !!!\""
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ahomu/Talkie"
  },
  "author": "ahomu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahomu/Talkie/issues"
  },
  "homepage": "https://github.com/ahomu/Talkie",
  "dependencies": {
    "baconjs": "^0.7.82",
    "keycode": "^2.1.0",
    "markdown-it": "^6.0.0",
    "object-assign": "^4.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.8",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "cssnext": "^1.8.4",
    "eslint": "^1.10.3",
    "karma": "^0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.1.10",
    "licensify": "^2.2.0",
    "minimist": "^1.1.0",
    "mocha": "~2.0.1",
    "power-assert": "^0.11.0",
    "serve": "^1.4.0",
    "sinon": "~1.12.2",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
